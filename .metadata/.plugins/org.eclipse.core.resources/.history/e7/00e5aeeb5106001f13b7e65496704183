package ckeckpoint2;

import java.util.Scanner;

public class exercicio03 {
	public static void main(String[] args) {
		Scanner in = new Scanner (System.in);
		
		double totaldecompras, desconto;
		
		System.out.println("Digite o valor total das suas compras: ");
		totaldecompras = in.nextDouble();
		
		if (totaldecompras > 1000) {
			desconto = totaldecompras * 1.15;
		}else {
			desconto = totaldecompras * 1.08;
		}
		
		System.out.println("O valor total é de " + String.format("%.2f", totaldecompras) + " , você teve um deconto de " + desconto + " e economizou " + (totaldecompras-desconto));
		
		
		
		
		
		in.close();
	}

}
