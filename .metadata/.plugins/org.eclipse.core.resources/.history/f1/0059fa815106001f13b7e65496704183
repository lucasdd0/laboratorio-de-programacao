package ckeckpoint2;

import java.util.Scanner;

public class exercicio03 {
	public static void main(String[] args) {
		Scanner in = new Scanner (System.in);
		
		double totaldecompras, total;
		
		System.out.println("Digite o valor total das suas compras: ");
		totaldecompras = in.nextDouble();
		
		if (totaldecompras > 1000) {
			totaldecompras *= 0.15;
		}else {
			totaldecompras *= 0.08;
		}
		
		System.out.println("O valor total é de " + String.format("%.2f", totaldecompras) + " e você teve um deconto de ");
		
		
		
		
		
		in.close();
	}

}
