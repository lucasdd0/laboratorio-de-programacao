package ckeckpoint2;

import java.util.Scanner;

public class exercicio03 {
	public static void main(String[] args) {
		Scanner in = new Scanner (System.in);
		
		double totaldecompra, desconto;
		
		System.out.println("Digite o valor total das suas compras: ");
		totaldecompra = in.nextDouble();
		
		if (totaldecompra > 1000) {
			desconto = totaldecompra * 0.85;
		}else {
			desconto = totaldecompra * 0.92;
		}
		
		System.out.println("O valor que deve pagar Ã© de " + String.format("%.2f", desconto) + " e economizou " + (totaldecompra-desconto));
		
		
		
		
		
		in.close();
	}

}
